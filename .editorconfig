root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

[*.php]
# 4 space indentation
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.{js,vue}]
# 2 space indentation
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
